{
  "manifest_version": 2,

  "name": "Goodreads ratings for Amazon",
  "short_name": "Goodreads for Amazon",
  "description": "Show Goodreads ratings for books in Amazon.",
  "version": "1.4.1",

  "permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.es/*",
    "*://*.amazon.in/*",
    "*://*.amazon.co.jp/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.de/*",
    "*://*.amazon.it/*",
    "*://*.amazon.nl/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.mx/*",
    "*://*.amazon.com.au/*",
    "*://*.amazon.com.br/*",
    "*://*.goodreads.com/*"
  ],


  "icons": {
    "128": "images/default-128.png",
    "48": "images/default-48.png",
    "24": "images/default-24.png"
  },
  "content_scripts": [{
    "matches": [
      "*://*.amazon.com/*",
      "*://*.amazon.es/*",
      "*://*.amazon.in/*",
      "*://*.amazon.co.jp/*",
      "*://*.amazon.fr/*",
      "*://*.amazon.de/*",
      "*://*.amazon.it/*",
      "*://*.amazon.nl/*",
      "*://*.amazon.co.uk/*",
      "*://*.amazon.ca/*",
      "*://*.amazon.com.mx/*",
      "*://*.amazon.com.au/*",
      "*://*.amazon.com.br/*"
    ],
    "css": [
      "content.css"
    ],
    "js": [
      "jquery-2.1.4.min.js",
      "content.js"
    ]
  }],
  "web_accessible_resources": [
    "content.css"
  ]
}